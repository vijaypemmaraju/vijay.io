---
import Layout from "../layouts/Layout.astro";
import Bento from "../components/Bento";
---

<Layout title="Vijay Pemmaraju">
  <main class="flex justify-center items-center h-screen text-white">
    <div class="flex justify-cemter items-center">
      <div
        class="w-[400px] h-[400px] flex flex-col justify-center items-center gap-2"
      >
        <Bento client:visible />
      </div>
    </div>
  </main>

  <style>
    /* The typing effect */
    @keyframes typing {
      from {
        width: 0;
      }

      to {
        width: 100%;
      }
    }

    /* The typewriter cursor effect */
    @keyframes blink-caret {
      from,
      to {
        border-color: transparent;
      }

      50% {
        border-color: orange;
      }
    }
  </style>
</Layout>
